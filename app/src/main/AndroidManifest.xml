<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="nain.com">

<!--    permisos de internet para el api-->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".ui.AppoinmentsActivity"
            android:parentActivityName=".ui.MenuActivity"
            />
        <activity
            android:name=".ui.CreateAppoinmentActivity"
            android:parentActivityName=".ui.MenuActivity"
            />
        <activity android:name=".ui.MenuActivity" />
<!--        Usamos instancia de las actividades -->
<!--        android:launchMode="singleInstance"-->
        <activity android:name=".ui.RegisterActivity" android:launchMode="singleInstance"/>
        <activity android:name=".ui.MainActivity" android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>