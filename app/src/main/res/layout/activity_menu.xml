<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".MenuActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_horizontal"
        android:paddingTop="12dp"
        android:text="@string/label_welcome"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnCreateAppointment"
        style="@style/MenuButton"
        android:layout_width="match_parent"
        android:drawableStart="@drawable/ic_add_circle"
        android:text="@string/btn_create_appointments" />

    <Button
        android:id="@+id/btnMyAppointment"
        style="@style/MenuButton"
        android:layout_width="match_parent"
        android:drawableStart="@drawable/ic_schedule"
        android:text="@string/btn_my_appointments" />

    <Button
        android:id="@+id/btnLogout"
        style="@style/MenuButton"
        android:layout_width="match_parent"
        android:drawableStart="@drawable/ic_power_of"
        android:text="@string/btn_log_out" />

</LinearLayout>